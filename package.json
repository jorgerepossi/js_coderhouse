{
  "name": "entrega",
  "version": "1.0.1",
  "description": "",
  "main": "webpack.config.prod.js",
  "private": true,
  "scripts": {
    "start": "node webpack.config.prod.js",
    "prod": "npm webpack",
    "build-css": "node-sass --include-path scss sass/main.scss css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "prepare": "husky install",
    "pre-commit": "pretty-quick --staged",
    "postcommit": "git update-index -g",
    "pretty": "prettier --write \"./**/*.{css,scss,html,js,jsx,json}\"",
    "format": "prettier --write .",
    "lint": "npm run format ",
    "lint-staged": "lint-staged",
    "dev": "npm run pretty && npm run lint && npm run pre-commit  && npm run postcommit "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^5.2.0",
    "imagemin": "^7.0.1",
    "imagemin-webp": "^5.1.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "sass": "^1.32.8",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,html}": [
      "prettier --single-quote --write",
      "git add .",
      "npm run lint",
      "npm run format"
    ]
  },
  "dependencies": {
    "imagemin-jpegtran": "^7.0.0",
    "nvm": "^0.0.4"
  }
}
